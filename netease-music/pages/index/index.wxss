@import "../template/template.wxss";

.top {
    height: 250rpx;
    width: 100%;
    background-color: #EA584F;
    position: relative;
}

.search-wrap {
    font-size: 0;
}

.search {
    display: inline-block;
    width: 600rpx;
    height: 40rpx;
    border-radius: 20rpx;
    background-color: rgba(255, 255, 255, .5);
    margin-left: 35rpx;
    margin-right: 35rpx;
    color: #fff;
    font-size: 30rpx;
    line-height: 40rpx;
    text-align: center;
    vertical-align: middle;
}

.icon-sousuo,
.search-content {
    display: inline-block;
    margin-right: 10rpx;
}

.swiper-wrap {
    position: absolute;
    width: 100%;
    height: 283rpx;
    top: 60rpx;
    left: 25rpx;
    
}

.swiper,
.swiper image {
    height: 100%;
    width: 700rpx;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
    overflow: hidden;
}

.icon-nav {
    margin-top: 93rpx;
    display: flex;
    color: #EA584F;
    font-size: 20rpx;
    padding-bottom: 30rpx;
    border-bottom: 1px solid #eee;
}

.nav-item {
    /* flex: 1; */
    margin: 0 40rpx;
    text-align: center;
}

.nav-item .icon {
    border: 1px solid #EA584F;
    padding: 20rpx;
    border-radius: 50%;
    box-sizing: border-box;
    height: 105rpx;
    width: 105rpx;
    font-size: 50rpx;
    line-height: 65rpx;
    margin: 20rpx 0;
}

.recommendList {

}

.recommendList .title {
    font-weight: bold;
    font-size: 30rpx;
    color: #000;
    padding: 20rpx 20rpx 15rpx 20rpx;
}
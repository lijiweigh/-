/* components/songSheetItem/songSheetItem.wxss */
@import '../../iconfont.wxss';

.songSheetItem {
    display: flex;
    color: #333;
}

.number {
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 26rpx;
    color: #333;
}

.detail {
    flex: 1;
    padding: 20rpx 30rpx 20rpx 0;
    position: relative;
    border-bottom: 1rpx solid #eee;
}

.title {
    font-size: 30rpx;
}

.more {
    font-size: 22rpx;
    margin-top: 20rpx;
}

.playIcon {
    position: absolute;
    right: 30rpx;
    top: 50%;
    transform: translateY(-50%);
}
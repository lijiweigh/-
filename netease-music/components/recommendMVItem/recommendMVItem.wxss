.recommendMVItem {
    padding: 10rpx 0 10rpx 0;
}

.poster {
    position: relative;
}

.poster_img {
    width: 100%;
    height: 400rpx;
    border-radius: 10rpx;
    
}

.singerTag {
    position: absolute;
    right: 20rpx;
    top: 15rpx;
    border: 1rpx solid #fff;
    color: #fff;
    font-size: 22rpx;
    height: 30rpx;
    border-radius: 30rpx;
    padding: 2rpx 20rpx;
    background-color: rgba(0, 0, 0, .4)
}
.icon-bofang {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);

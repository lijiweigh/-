.list-item {
    background-color: #fff;
    width: 100%;
    box-sizing: border-box;
    padding: 0 30rpx;
    margin-bottom: 20rpx;
}
.header {
    display: flex;
    justify-content: space-between;
    padding: 20rpx 0;
}
.header-left {
    display: flex;
    align-items: center;
}
.avatar,
.menu-icon {
    width: 44rpx;
    height: 44rpx;
}
.avatar {
    margin-right: 20rpx;
    border-radius: 50%;
}
.title {
    font-size: 28rpx;
    font-weight: 600px;
    line-height: 40rpx;
    text-space: 5rpx;
}
.content {
    padding: 10rpx 0 0 0;
    font-size: 24rpx;
    line-height: 28rpx;
    color: #5b5b5b;
}
.bottom-text {
    font-size: 24rpx;
}